#include<stdio.h>
int main()
{
    int i;
    double money,res;
    printf("De a quantia do seu cart√£o:");
    scanf("%lf", &money);
    res=money;
    for(i=0; i< money; i++)
    {
        res = res - 3;
        if (res < 3)
            printf("reacarregue o cartao!");
        else
        printf("Voce ainda tem:%g\n", res);
    }

     return 0;
}
